<div class="container">
  <h1>Welcome, <%= @user.first_name %></h1>
  <div class="row">
  <div class="col-md-12">

    <b>Email: </b><%=@user.email%></br>
    <b>Member since: </b><%= @user.created_at.to_date%></br>
    <div>
      <% if current_user.id == @user.id %>
      <%= button_to "Edit" , edit_user_url , method: :get, class: "btn-default btn-sm profile-content" %>
      <%= button_to "Delete", @user, method: :delete,data:{confirm: "Are you sure you want to delete your account?"}, class: "btn-danger btn-sm profile-content" %>
      <% end %>
    </div>
  </div>
  </div>
</div>
  <div class="row">
  <div class="col-md-4">
    <h3>Currently Reading</h3>


  </div>
  <div class="col-md-4">
    <h3>Recently Read</h3>
    <% @user.reading_lists.each do |list| %>
    <% if list.have_read? %>
      <h4> <%= link_to list.book.title, book_path(list.book) %> </h4>
    <% end %>
    <% end %>
  </div>
  <div class="col-md-4">
    <h3>Interested In</h3>
  </div>
</div>
