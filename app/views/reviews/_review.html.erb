<div class="review">
  <div class="review-rating" data-score="<%= review.rating%>"></div>
  <p><%= review.comment %></p>

  <% if current_user %>

    <% if review.user_id == current_user.id %>

      <%= link_to "Edit Review", edit_book_review_path(review.book, review), class: "btn btn btn-custom2" %>
      <%= link_to "Delete Review", book_review_path(review.book, review), method: :delete, data: { confirm: "Are you sure you want to delete this review?" }, class: "btn btn btn-custom2" %>


      <% end %>

  <% end %>

</div>
