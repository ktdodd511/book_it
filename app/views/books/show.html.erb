<h3>Title: <%= @book.title %> </h3></br>
<h4> Author: <%= @book.author %> </h4></br>
<h4>Genre: <%= @book.category.name%> </h4></br>
<h4> Date Published: <%= @book.date_published %> </h4></br>
<h4> Description: <%= @book.description %> </h4></br>


<%= link_to "Back", :back %>


<% if current_user %>

  <% if @book.user_id == current_user.id %>
    <%= link_to "Edit Book", edit_book_path(@book), class: "btn btn-success" %>
    <%= link_to "Delete Book", book_path(@book), method: :delete, data: { confirm: "Are you sure you want to delete this book?" }, class: "btn btn-danger" %>
  <% end %>

<% end %>
