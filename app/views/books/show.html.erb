<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
  </div>

  <div class="col-md-8">
    <h3>Title: <%= @book.title %> </h3></br>
    <h3>Average Rating<h3>
      <div class="average-review-rating" data-score="<%= @average_review %>"></div>
      <span id="num-of-reviews">Based on <%= @book.reviews.count %> reviews</span></br>
    <h4> Author: <%= @book.author %> </h4></br>
    <h4>Genre: <%= @book.category.name%> </h4></br>
    <h4> Date Published: <%= @book.date_published %> </h4></br>
    <h4> Description: <%= @book.description %> </h4></br>
  </div>

</div>

<div class="row">
  <div class="col-md-4">

    <%= render @book.reviews %>

    <div>
      <%= link_to "Add Review", new_book_review_path(@book), class: "btn btn btn-primary" %>
    </div>
  </div>

</div>


<%= link_to "Back", :back, class: "btn btn btn-info" %>


<% if current_user %>

  <% if @book.user_id == current_user.id %>
    <%= link_to "Edit Book", edit_book_path(@book), class: "btn btn-success" %>
    <%= link_to "Delete Book", book_path(@book), method: :delete, data: { confirm: "Are you sure you want to delete this book?" }, class: "btn btn-danger" %>
  <% end %>

<% end %>

<script>
  $('.review-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>


  <script>
    $('.average-review-rating').raty({
      readOnly: true,
      path: '/assets/',
      score: function() {
        return $(this).attr('data-score')
      }
    });
  </script>
